<div class="section-image-with-text">
  <div class="container" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    {% if section.settings.layout_order == 'text_first' %}
    <!-- Text Content First -->
    <div class="col-6">
      <div class="text-content">
        <h1 class="heading" style="font-size: {{ section.settings.heading_font_size }}px;">
          {{ section.settings.heading }}
        </h1>
        <p class="subtitle" style="font-size: {{ section.settings.subtitle_font_size }}px;">
          {{ section.settings.body_text }}
        </p>
        <a href="{{ section.settings.button_link }}" class="btn btn-primary">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
    <!-- Single Image -->
    <div class="col-6">
      <div class="image">
        <img src="{{ section.settings.image_1 | img_url: 'large' }}" alt="Image 1">
      </div>
    </div>
    {% else %}
    <!-- Single Image First -->
    <div class="col-6">
      <div class="image">
        <img src="{{ section.settings.image_1 | img_url: 'large' }}" alt="Image 1">
      </div>
    </div>
    <!-- Text Content -->
    <div class="col-6">
      <div class="text-content">
        <h1 class="heading" style="font-size: {{ section.settings.heading_font_size }}px;">
          {{ section.settings.heading }}
        </h1>
        <p class="subtitle" style="font-size: {{ section.settings.subtitle_font_size }}px;">
          {{ section.settings.body_text }}
        </p>
        <a href="{{ section.settings.button_link }}" class="btn btn-primary">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
    {% endif %}
  </div>
</div>

<style>
.section-image-with-text .container {
  display: flex;
  width: 100%;
  max-width: 1200px;
  margin: auto;
  justify-content: space-between;
}
.section-image-with-text .image {
  width: 100%;
  padding: 5px;
}
.section-image-with-text .image img {
  width: 100%;
  height: 300px;
  object-fit: cover;
}
.section-image-with-text .text-content {
  padding: 20px;
}
.section-image-with-text .btn {
  margin-top: 20px;
  display: inline-block;
  padding: 10px 20px;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  text-decoration: none;
  color: #fff;
  background-color: #007bff;
  border: none;
  border-radius: 5px;
  transition: background-color 0.3s ease, transform 0.3s ease;
}
.section-image-with-text .btn:hover {
  background-color: #0056b3;
  transform: scale(1.05);
}
.section-image-with-text .heading {
  font-size: 2em; /* Adjust as needed */
  font-weight: bold;
}
.section-image-with-text .subtitle {
  font-size: 1em; /* Adjust as needed */
}
.col-6 {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .section-image-with-text .container {
    flex-direction: column;
  }
  .col-6 {
    width: 100%;
    margin-bottom: 20px;
  }
  .section-image-with-text .heading {
    font-size: 1.5em; /* Adjust for smaller screens */
  }
  .section-image-with-text .subtitle {
    font-size: 0.9em; /* Adjust for smaller screens */
  }
}
</style>

{% schema %}
{
  "name": "Image with Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Default Heading"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "Default body text goes here."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click Here"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "default": 32,
      "min": 10,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "subtitle_font_size",
      "label": "Subtitle Font Size (px)",
      "default": 16,
      "min": 10,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "min": 0,
      "max": 1000,
      "step": 10,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "min": 0,
      "max": 1000,
      "step": 10,
      "default": 20
    },
    {
      "type": "select",
      "id": "layout_order",
      "label": "Layout Order",
      "options": [
        {
          "value": "text_first",
          "label": "Text First"
        },
        {
          "value": "image_first",
          "label": "Image First"
        }
      ],
      "default": "text_first"
    }
  ],
  "presets": [
    {
      "name": "Image with Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}
