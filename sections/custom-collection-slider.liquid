<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>
  /* Existing styles, no changes needed for now */
  .swiper-button-prev,
  .swiper-button-next {
    color: black;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%) skew(-10deg) scale(1.5);
    z-index: 10;
  }

  .swiper-button-prev {
    left: 20px;
  }

  .swiper-button-next {
    right: 20px;
  }

  .swiper-button-prev::after,
  .swiper-button-next::after {
    font-size: 24px;
    font-weight: bold;
  }
  
  @media screen and (max-width: 767px) {
    .swiper-button-prev,
    .swiper-button-next {
      width: 32px;
      height: 32px;
      transform: translateY(-50%) scale(1.1);
    }
    .swiper-button-prev::after,
    .swiper-button-next::after {
      font-size: 16px;
    }
  }
</style>

<div class="custom-collection-slider">
  <div class="swiper">
    <div class="swiper-wrapper">
      <!-- Title Card -->
      <div class="swiper-slide title-card" style="background-image: url('{{ section.settings.bg_image | img_url: 'original' }}'); background-repeat: no-repeat;">
        <h2>{{ section.settings.title }}</h2>
      </div>

      <!-- Product Cards - Limited to 10 -->
      {% assign collection = collections[section.settings.collection] %}
      {% assign product_count = 0 %}
      {% for product in collection.products %}
        {% if product_count < 10 %}
          <div class="swiper-slide product-card" onclick="window.location.href='{{ product.url }}';" style="cursor: pointer;">
            <img class="product-image" src="{{ product.featured_image | img_url: '800x800' }}" alt="{{ product.title }}">
            <div class="product-infobox">
              <p class="product-vendor">{{ product.vendor }}</p>
              <h3 class="product-title">{{ product.title }}</h3>
              <div class="button-price-div">
                <p class="product-price">{{ product.price | money }}</p>
                <a href="{{ product.url }}" class="add-to-cart-button">
                  Add to Cart
                  <img src="{{ 'race arrow.png' | asset_url }}" alt="Icon" style="width: 11px; height: 15px; vertical-align: middle; margin-left: 5px;">
                </a>
              </div>
            </div>
          </div>
          {% assign product_count = product_count | plus: 1 %}
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Navigation Buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>

<script>
class CollectionSlider {
  constructor(container) {
    this.container = container;
    this.sectionId = container.dataset.sectionId;
    this.init();
  }

  init() {
    // Clean up any existing instance
    if (this.container.swiperInstance) {
      this.container.swiperInstance.destroy();
    }

    // Initialize new Swiper instance with slidesPerView set to 6
    this.swiper = new Swiper(this.container.querySelector('.swiper'), {
      slidesPerView: 6, // Show 6 slides at a time
      spaceBetween: 20, // Space between slides
      loop: false,
      navigation: {
        nextEl: this.container.querySelector('.swiper-button-next'),
        prevEl: this.container.querySelector('.swiper-button-prev'),
      },
      breakpoints: {
        320: { slidesPerView: 1 },
        640: { slidesPerView: 2 },
        768: { slidesPerView: 3 },
        1024: { slidesPerView: 4 },
        1280: { slidesPerView: 6 }
      },
      on: {
        init: function () {
          this.navigation.init();
          this.navigation.update();
        },
        slideChange: function () {
          this.navigation.update();
        }
      }
    });

    // Store instance reference
    this.container.swiperInstance = this.swiper;

    // Force buttons to be visible
    const buttons = this.container.querySelectorAll('.swiper-button-prev, .swiper-button-next');
    buttons.forEach(btn => btn.style.display = 'flex');
  }
}

document.addEventListener('DOMContentLoaded', function() {
  if (typeof Swiper === 'undefined') {
    console.error('Swiper library not loaded');
    return;
  }

  // Initialize all sliders on the page
  document.querySelectorAll('.custom-collection-slider').forEach(container => {
    new CollectionSlider(container);
  });
});

// For Shopify section reloading
if (typeof document.dispatchEvent === 'function') {
  document.addEventListener('shopify:section:load', function(event) {
    const container = event.target.querySelector('.custom-collection-slider');
    if (container && typeof Swiper !== 'undefined') {
      new CollectionSlider(container);
    }
  });
}
</script>

