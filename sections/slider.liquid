<div class="slider">
  <div class="slider-inner">
    <div class="slider-item">
      {% if section.settings.image_1 != blank %}
        <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="Image 1" class="image-{{ section.settings.image_view }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="slider-item">
      {% if section.settings.image_2 != blank %}
        <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="Image 2" class="image-{{ section.settings.image_view }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="slider-item">
      {% if section.settings.image_3 != blank %}
        <img src="{{ section.settings.image_3 | img_url: 'master' }}" alt="Image 3" class="image-{{ section.settings.image_view }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="slider-item">
      {% if section.settings.image_4 != blank %}
        <img src="{{ section.settings.image_4 | img_url: 'master' }}" alt="Image 4" class="image-{{ section.settings.image_view }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="slider-item">
      {% if section.settings.image_5 != blank %}
        <img src="{{ section.settings.image_5 | img_url: 'master' }}" alt="Image 5" class="image-{{ section.settings.image_view }}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
  </div>
  <button class="prev">❮</button>
  <button class="next">❯</button>
</div>

<style>
.slider {
  position: relative;
  max-width: 100%;
  overflow: hidden;
}

.slider-inner {
  display: flex;
  transition: transform 0.5s ease;
}

.slider-item {
  min-width: 100%;
  box-sizing: border-box;
}

.slider-item img {
  width: 100%;
  display: block;
}

.image-cover {
  object-fit: cover;
}

.image-original {
  object-fit: none;
}

.image-stretch {
  object-fit: fill;
}

button.prev,
button.next {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
}

button.prev {
  left: 10px;
}

button.next {
  right: 10px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let currentIndex = 0;
  const sliderInner = document.querySelector('.slider-inner');
  const sliderItems = document.querySelectorAll('.slider-item');
  const totalItems = sliderItems.length;
  
  document.querySelector('.prev').addEventListener('click', function() {
    currentIndex = (currentIndex === 0) ? totalItems - 1 : currentIndex - 1;
    sliderInner.style.transform = `translateX(-${currentIndex * 100}%)`;
  });
  
  document.querySelector('.next').addEventListener('click', function() {
    currentIndex = (currentIndex === totalItems - 1) ? 0 : currentIndex + 1;
    sliderInner.style.transform = `translateX(-${currentIndex * 100}%)`;
  });
});
</script>

