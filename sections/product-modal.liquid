<!-- Buy Now Button to Open Modal -->
{% if settings.enable_modal and settings.selected_product %}
<button class="btn" onclick="openModal()">Buy Now</button>
{% endif %}

<!-- Product Modal -->
{% if settings.enable_modal and settings.selected_product %}
<div id="productModal" class="modal" style="background-color: {{ settings.modal_overlay }}">
  <div class="modal-content" style="background-color: {{ settings.modal_background }}">
    <span class="close" onclick="closeModal()">&times;</span>
    <h2>{{ settings.modal_title }}</h2>

    {% assign modal_product = all_products[settings.selected_product] %}
    {% if modal_product %}
      <!-- Product Image -->
      <div class="modal-image">
        <img src="{{ modal_product.featured_image | img_url: 'medium' }}" alt="{{ modal_product.title }}">
      </div>
      <!-- Product Details -->
      <div class="modal-details">
        <h3>{{ modal_product.title }}</h3>
        <p>{{ modal_product.price | money }}</p>
        <div>{{ modal_product.description | strip_html | truncatewords: 20 }}</div>
        <button class="btn" onclick="addToCart('{{ modal_product.id }}')">Add to Cart</button>
      </div>
    {% else %}
      <p>Product not found.</p>
    {% endif %}
  </div>
</div>
{% endif %}

<style>
/* Modal styling */
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.5); /* Default overlay color */
}
.modal-content {
  background-color: #fff;
  margin: 10% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
  max-width: 500px;
}
.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
  cursor: pointer;
}
.modal-image img {
  width: 100%;
  height: auto;
  margin-bottom: 15px;
}
.modal-details h3 {
  margin-top: 0;
}
</style>

<script>
function openModal() {
  document.getElementById("productModal").style.display = "block";
}
function closeModal() {
  document.getElementById("productModal").style.display = "none";
}
</script>

<!-- Schema for Theme Settings -->
{% schema %}
{
  "name": "Product Modal",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_modal",
      "label": "Enable Product Modal",
      "default": true
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Modal Title",
      "default": "Product Details"
    },
    {
      "type": "product",
      "id": "selected_product",
      "label": "Select Product for Modal"
    },
    {
      "type": "color",
      "id": "modal_background",
      "label": "Modal Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "modal_overlay",
      "label": "Overlay Background Color",
      "default": "rgba(0, 0, 0, 0.5)"
    }
  ],
  "presets": [
    {
      "name": "Product Modal",
      "category": "Custom"
    }
  ]
}
{% endschema %}

