<!-- Buy Now Button to Open Modal -->
<button class="btn" id="buyNowBtn">Buy Now3</button>

<!-- Product Modal -->
{% if settings.enable_modal and settings.selected_product %}
<div id="productModal" class="modal" style="background-color: {{ settings.modal_overlay }}">
  <div class="modal-content" style="background-color: {{ settings.modal_background }}">
    <span class="close" id="closeModalBtn">&times;</span>
    <h2>{{ settings.modal_title }}</h2>

    {% assign modal_product = all_products[settings.selected_product] %}
    {% if modal_product %}
      <!-- Product Image -->
      <div class="modal-image">
        <img src="{{ modal_product.featured_image | img_url: 'medium' }}" alt="{{ modal_product.title }}">
      </div>
      <!-- Product Details -->
      <div class="modal-details">
        <h3>{{ modal_product.title }}</h3>
        <p>{{ modal_product.price | money }}</p>
        <div>{{ modal_product.description | strip_html | truncatewords: 20 }}</div>
        <button class="btn" onclick="addToCart('{{ modal_product.id }}')">Add to Cart</button>
      </div>
    {% else %}
      <p>Product not found.</p>
    {% endif %}
  </div>
</div>
{% endif %}

<style>
/* Modal styling */
.modal {
  display: none; /* Hidden by default */
  position: fixed;
  z-index: 1000; /* Ensure the modal is on top of other content */
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.5); /* Overlay color */
  transition: opacity 0.3s ease, visibility 0.3s ease; /* Smooth transition */
}

.modal.show {
  display: block;
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background-color: #fff;
  margin: 10% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
  max-width: 500px;
}

.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
  cursor: pointer;
}

.modal-image img {
  width: 100%;
  height: auto;
  margin-bottom: 15px;
}

.modal-details h3 {
  margin-top: 0;
}
</style>

<script>
// Wait for the DOM content to be fully loaded before adding event listeners
document.addEventListener("DOMContentLoaded", function() {
  const modal = document.getElementById("productModal");
  const openBtn = document.getElementById("buyNowBtn");
  const closeBtn = document.getElementById("closeModalBtn");

  // Function to open the modal
  function openModal() {
    modal.classList.add("show");
  }

  // Function to close the modal
  function closeModal() {
    modal.classList.remove("show");
  }

  // Open the modal when the "Buy Now" button is clicked
  openBtn.addEventListener("click", openModal);

  // Close the modal when the "X" button is clicked
  closeBtn.addEventListener("click", closeModal);

  // Close the modal if the user clicks outside the modal content
  window.addEventListener("click", function(event) {
    if (event.target === modal) {
      closeModal();
    }
  });
});
</script>

<!-- Schema for Theme Settings -->
{% schema %}
{
  "name": "Product Modal",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_modal",
      "label": "Enable Product Modal",
      "default": true
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Modal Title",
      "default": "Product Details"
    },
    {
      "type": "product",
      "id": "selected_product",
      "label": "Select Product for Modal"
    },
    {
      "type": "color",
      "id": "modal_background",
      "label": "Modal Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "modal_overlay",
      "label": "Overlay Background Color",
      "default": "rgba(0, 0, 0, 0.5)"
    }
  ],
  "presets": [
    {
      "name": "Product Modal",
      "category": "Custom"
    }
  ]
}
{% endschema %}
