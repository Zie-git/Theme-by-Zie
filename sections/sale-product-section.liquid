{% comment %}
  This section allows you to display a featured product and select it via the theme customizer.
{% endcomment %}
{% assign product = all_products[section.settings.product_handle] %}

<div class="featured-product">
  {% if product %}
    <div class="featured-product-container">
      <!-- Left Column: Product Image -->
      <div class="product-image-column">
        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
      </div>
      
      <!-- Right Column: Product Information -->
      <div class="product-info-column">
        <h2>{{ product.title }}</h2>
        <p class="product-price">
          {% if product.compare_at_price > product.price %}
            <span class="old-price">{{ product.compare_at_price | money }}</span>
          {% endif %}
          <span class="current-price">{{ product.price | money }}</span>
        </p>
        <div class="product-description">
          {{ product.description | strip_html | truncate: 150 }}
        </div>
        <div class="countdown-timer" id="countdown">
          <div>
            <span id="days">00</span>
            <p>Days</p>
          </div>
          <div>
            <span id="hours">00</span>
            <p>Hrs</p>
          </div>
          <div>
            <span id="minutes">00</span>
            <p>Mins</p>
          </div>
          <div>
            <span id="seconds">00</span>
            <p>Secs</p>
          </div>
        </div>
        <a href="{{ product.url }}" class="btn btn-primary">View Product</a>
      </div>
    </div>
  {% else %}
    <p>No product selected or product not found. Please choose a product in the theme editor.</p>
  {% endif %}
</div>

<style>
  .featured-product {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    margin: 20px 0;
  }
  .featured-product-container {
    display: flex;
    flex-direction: row;
    gap: 20px;
    max-width: 1200px;
    width: 100%;
  }
  .product-image-column {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .product-image-column img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
  .product-info-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .product-price {
    margin: 10px 0;
  }
  .old-price {
    text-decoration: line-through;
    color: #888;
    margin-right: 10px;
  }
  .current-price {
    font-weight: bold;
    color: #333;
  }
  .countdown-timer {
    display: flex;
    gap: 15px;
    margin-top: 15px;
  }
  .countdown-timer div {
    text-align: center;
    font-size: 16px;
  }
  .countdown-timer span {
    font-size: 24px;
    font-weight: bold;
    color: #333;
  }
  .btn {
    display: inline-block;
    margin-top: 15px;
    padding: 10px 20px;
    background-color: #007aff;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
  }
  .btn:hover {
    background-color: #005bb5;
  }
</style>

<script>
  // Set the sale end date (modify this date as needed)
  var saleEndDate = new Date("2024-12-31T23:59:59").getTime();

  function updateCountdown() {
    var now = new Date().getTime();
    var timeRemaining = saleEndDate - now;

    if (timeRemaining >= 0) {
      var days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
      var hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      var minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
      var seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

      document.getElementById("days").textContent = days;
      document.getElementById("hours").textContent = hours;
      document.getElementById("minutes").textContent = minutes;
      document.getElementById("seconds").textContent = seconds;
    } else {
      document.getElementById("countdown").innerHTML = "<p>Sale has ended!</p>";
    }
  }

  setInterval(updateCountdown, 1000);
</script>

{% schema %}
{
  "name": "Featured Product",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Select Product"
    }
  ],
  "presets": [
    {
      "name": "Sales Product",
      "category": "Custom"
    }
  ]
}
{% endschema %}
