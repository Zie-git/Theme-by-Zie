<div class="product-deal-section">
  <h2 class="product-title">{{ section.settings.product_title }}</h2>
  <p class="deal-label">{{ section.settings.deal_label }}</p>
  
  <div class="countdown">
    <p>Hurry! Ends in</p>
    <div class="timer">
      <span class="days">{{ section.settings.countdown_days }}</span> <span>Days</span>
      <span class="hours">{{ section.settings.countdown_hours }}</span> <span>Hrs</span>
      <span class="minutes">{{ section.settings.countdown_minutes }}</span> <span>Mins</span>
      <span class="seconds">{{ section.settings.countdown_seconds }}</span> <span>Secs</span>
    </div>
  </div>

  <div class="sale-info">
    <span class="sale-badge">Sale</span>
    <p class="discount">{{ section.settings.discount_percentage }}% off</p>
  </div>

  <h3 class="product-name">{{ section.settings.product_name }}</h3>
  <p class="product-description">{{ section.settings.product_description }}</p>
  
  <div class="price">
    <p>${{ section.settings.product_price }}</p>
  </div>

  <a href="{{ section.settings.product_link }}" class="view-product">{{ section.settings.cta_text }}</a>

  <div class="additional-links">
    <a href="{{ section.settings.deals_link }}" class="limited-deals">{{ section.settings.deals_text }}</a>
    <a href="{{ section.settings.gear_link }}" class="find-gear">{{ section.settings.gear_text }}</a>
  </div>
</div>

<style>
  .product-deal-section {
    font-family: Arial, sans-serif;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    max-width: 400px;
    margin: auto;
  }
  .countdown .timer span {
    font-weight: bold;
    margin: 0 5px;
  }
  .sale-info {
    color: red;
    font-weight: bold;
  }
  .view-product, .additional-links a {
    display: block;
    margin-top: 10px;
    color: white;
    background-color: blue;
    text-align: center;
    text-decoration: none;
    padding: 10px;
    border-radius: 5px;
  }
</style>

