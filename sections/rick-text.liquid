<div class="rich-text-section" style="text-align: {{ section.settings.text_alignment }}; color: {{ section.settings.text_color }}; font-family: {{ section.settings.text_font }}; font-size: {{ section.settings.text_font_size }};">

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'icon' %}
        {% if block.settings.icon_class %}
          <i class="{{ block.settings.icon_class }}"></i>
        {% endif %}
      {% when 'heading' %}
        {% if block.settings.heading %}
          <h1 style="font-family: {{ section.settings.heading_font }}; font-size: {{ section.settings.heading_font_size }}; font-weight: {{ section.settings.heading_font_weight }};">
            {{ block.settings.heading }}
          </h1>
        {% endif %}
      {% when 'text' %}
        <div class="rich-text-content">{{ block.settings.rich_text_content | strip_html }}</div>
      {% when 'button' %}
        {% if block.settings.button_text and block.settings.button_link %}
          <a href="{{ block.settings.button_link }}" class="rich-text-button">{{ block.settings.button_text }}</a>
        {% endif %}
    {% endcase %}
  {% endfor %}

</div>



<style>
.rich-text-section {
  margin: 20px auto; /* Center the section itself */
  max-width: 1000px; /* Optional: Limit the maximum width */
  padding: 20px; /* Optional: Add padding for better spacing */
}

.rich-text-section i {
  display: block;
  font-size: 24px;
  margin-bottom: 10px;
}

.rich-text-section h1 {
  margin: 0 0 10px;
}

.rich-text-content {
  font-family: inherit; /* Inherit font family from parent */
  font-size: inherit; /* Inherit font size from parent */
}

.rich-text-button {
  display: inline-block;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  font-size: 16px;
}

.rich-text-button:hover {
  background-color: #0056b3;
}

</style>



