{% schema %}
{
  "name": "Animated Slider",
  "settings": [
    {
      "type": "text",
      "id": "slider_title",
      "label": "Slider Title",
      "default": "My Animated Slider"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Slide Title",
          "default": "Default Slide Title"
        },
        {
          "type": "text",
          "id": "slide_subtitle",
          "label": "Slide Subtitle",
          "default": "Default Slide Subtitle"
        },
        {
          "type": "url",
          "id": "slide_button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "slide_button_text",
          "label": "Button Text",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Animated Slider",
      "category": "Sliders",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "slide_title": "First Slide",
            "slide_subtitle": "Subtitle for the first slide",
            "slide_button_text": "Discover",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image1.jpg"
          }
        },
        {
          "type": "slide",
          "settings": {
            "slide_title": "Second Slide",
            "slide_subtitle": "Subtitle for the second slide",
            "slide_button_text": "Learn More",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image2.jpg"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="animated-slider">
  <h2>{{ section.settings.slider_title }}</h2>
  <div class="slider-container">
    <div class="slides">
      {% for block in section.blocks %}
        <div class="slide">
          <div class="slide-image">
            {% if block.settings.slide_image %}
              <img src="{{ block.settings.slide_image | image_url }}" alt="Slide Image">
            {% endif %}
          </div>
          <div class="slide-text">
            <h3>{{ block.settings.slide_title }}</h3>
            <p>{{ block.settings.slide_subtitle }}</p>
            {% if block.settings.slide_button_link %}
              <a href="{{ block.settings.slide_button_link }}" class="slide-button">
                {{ block.settings.slide_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    <button class="slider-button prev">Prev</button>
    <button class="slider-button next">Next</button>
  </div>
</div>

<style>
  .animated-slider {
    text-align: center;
    margin: auto;
    max-width: 800px;
    position: relative;
  }

  .slider-container {
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 100%;
  }

  .slides {
    display: flex;
    flex-wrap: nowrap;
    position: relative;
    height: 100%;
    transform-style: preserve-3d;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    transition: all 0.5s ease-in-out;
    pointer-events: none;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  }

  .slide.active {
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: auto;
    z-index: 2;
  }

  .slide.glow {
    box-shadow: 0 10px 20px rgba(0, 123, 255, 0.5);
  }

  .slide-image img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .slider-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    z-index: 10;
  }

  .slider-button.prev {
    left: 10px;
  }

  .slider-button.next {
    right: 10px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slides = document.querySelectorAll('.slide');
    const prevButton = document.querySelector('.slider-button.prev');
    const nextButton = document.querySelector('.slider-button.next');
    let currentSlideIndex = 0;

    function updateSlides() {
      slides.forEach((slide, index) => {
        slide.classList.remove('active', 'glow');
        if (index === currentSlideIndex) {
          slide.classList.add('active', 'glow');
          setTimeout(() => slide.classList.remove('glow'), 500); // Remove glow after animation
        }
      });
    }

    function nextSlide() {
      currentSlideIndex = (currentSlideIndex + 1) % slides.length;
      slides[currentSlideIndex].style.zIndex = 1;
      updateSlides();
    }

    function prevSlide() {
      currentSlideIndex =
        (currentSlideIndex - 1 + slides.length) % slides.length;
      updateSlides();
    }

    nextButton.addEventListener('click', nextSlide);
    prevButton.addEventListener('click', prevSlide);

    updateSlides(); // Initialize the first slide
  });
</script>

