{% schema %}
{
  "name": "Animated Slider",
  "settings": [
    {
      "type": "text",
      "id": "slider_title",
      "label": "Slider Title",
      "default": "My Animated Slider"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Slide Title",
          "default": "Default Slide Title"
        },
        {
          "type": "text",
          "id": "slide_subtitle",
          "label": "Slide Subtitle",
          "default": "Default Slide Subtitle"
        },
        {
          "type": "url",
          "id": "slide_button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "slide_button_text",
          "label": "Button Text",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Animated Slider",
      "category": "Sliders",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "slide_title": "First Slide",
            "slide_subtitle": "Subtitle for the first slide",
            "slide_button_text": "Discover",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image1.jpg"
          }
        },
        {
          "type": "slide",
          "settings": {
            "slide_title": "Second Slide",
            "slide_subtitle": "Subtitle for the second slide",
            "slide_button_text": "Learn More",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image2.jpg"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="animated-slider">
  <h2>{{ section.settings.slider_title }}</h2>
  <div class="slider-container">
    <div class="slides">
      {% for block in section.blocks %}
        <div class="slide">
          <div class="slide-content">
            <div class="slide-image">
              {% if block.settings.slide_image %}
                <img src="{{ block.settings.slide_image | image_url }}" alt="Slide Image">
              {% endif %}
            </div>
            <div class="slide-text">
              <h3>{{ block.settings.slide_title }}</h3>
              <p>{{ block.settings.slide_subtitle }}</p>
              {% if block.settings.slide_button_link %}
                <a href="{{ block.settings.slide_button_link }}" class="slide-button">
                  {{ block.settings.slide_button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <button class="slider-button prev">Prev</button>
    <button class="slider-button next">Next</button>
  </div>
</div>

<style>
  .animated-slider {
    text-align: center;
    margin: auto;
    max-width: 800px;
    position: relative;
  }

  .slider-container {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .slides {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .slide {
    display: flex;
    flex: 0 0 100%;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    box-sizing: border-box;
    background-color: #f9f9f9;
  }

  .slide-content {
    display: flex;
    width: 100%;
    gap: 20px;
  }

  .slide-image img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .slide-text {
    text-align: left;
    flex: 1;
  }

  .slide-text h3 {
    font-size: 1.5em;
    margin: 0;
  }

  .slide-text p {
    font-size: 1em;
    color: #666;
    margin: 10px 0;
  }

  .slide-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    margin-top: 10px;
  }

  .slider-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    z-index: 10;
  }

  .slider-button.prev {
    left: 10px;
  }

  .slider-button.next {
    right: 10px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slides = document.querySelector('.slides');
    const prevButton = document.querySelector('.slider-button.prev');
    const nextButton = document.querySelector('.slider-button.next');

    function moveSlide(direction) {
      if (direction === 'next') {
        const firstSlide = slides.children[0];
        slides.appendChild(firstSlide);
      } else if (direction === 'prev') {
        const lastSlide = slides.children[slides.children.length - 1];
        slides.prepend(lastSlide);
      }
      slides.style.transition = 'transform 0.5s ease-in-out';
    }

    nextButton.addEventListener('click', () => moveSlide('next'));
    prevButton.addEventListener('click', () => moveSlide('prev'));
  });
</script>
