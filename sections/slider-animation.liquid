{% schema %}
{
  "name": "Animated Slider",
  "settings": [
    {
      "type": "text",
      "id": "slider_title",
      "label": "Slider Title",
      "default": "My Animated Slider"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Slide Title",
          "default": "Default Slide Title"
        },
        {
          "type": "text",
          "id": "slide_subtitle",
          "label": "Slide Subtitle",
          "default": "Default Slide Subtitle"
        },
        {
          "type": "url",
          "id": "slide_button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "slide_button_text",
          "label": "Button Text",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Animated Slider",
      "category": "Sliders",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "slide_title": "First Slide",
            "slide_subtitle": "Subtitle for the first slide",
            "slide_button_text": "Discover",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image1.jpg"
          }
        },
        {
          "type": "slide",
          "settings": {
            "slide_title": "Second Slide",
            "slide_subtitle": "Subtitle for the second slide",
            "slide_button_text": "Learn More",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image2.jpg"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="animated-slider">
  <h2>{{ section.settings.slider_title }}</h2>
  <div class="slider-container">
    <div class="slides">
      {% for block in section.blocks %}
        <div class="slide">
          <div class="slide-content">
            <div class="slide-image">
              {% if block.settings.slide_image %}
                <img src="{{ block.settings.slide_image | image_url }}" alt="Slide Image">
              {% endif %}
            </div>
            <div class="slide-text">
              <h3>{{ block.settings.slide_title }}</h3>
              <p>{{ block.settings.slide_subtitle }}</p>
              {% if block.settings.slide_button_link %}
                <a href="{{ block.settings.slide_button_link }}" class="slide-button">
                  {{ block.settings.slide_button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <button class="slider-button prev">Prev</button>
    <button class="slider-button next">Next</button>
  </div>
</div>

<style>
  .animated-slider {
    text-align: center;
    margin: auto;
    max-width: 800px;
    position: relative;
  }

  .slider-container {
    position: relative;
    width: 100%;
    height: 400px; /* Adjust as needed */
    perspective: 1000px; /* For 3D effect */
  }

  .slides {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .slide {
    position: absolute;
    width: 90%;
    height: 80%;
    background: #fff;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    transition: transform 0.6s ease, box-shadow 0.6s ease;
    will-change: transform;
  }

  .slide:nth-child(1) {
    z-index: 3;
    transform: translateZ(30px) scale(1);
  }

  .slide:nth-child(2) {
    z-index: 2;
    transform: translateZ(15px) scale(0.9);
  }

  .slide:nth-child(3) {
    z-index: 1;
    transform: translateZ(0) scale(0.8);
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }

  .slider-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    z-index: 10;
  }

  .slider-button.prev {
    left: 10px;
  }

  .slider-button.next {
    right: 10px;
  }

  .slide.lift {
    transform: translateY(-20px) rotateX(-10deg);
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.5);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slides = document.querySelectorAll('.slide');
    const prevButton = document.querySelector('.slider-button.prev');
    const nextButton = document.querySelector('.slider-button.next');

    function updateSlides(direction) {
      if (direction === 'next') {
        const firstSlide = slides[0];
        firstSlide.classList.add('lift');
        setTimeout(() => {
          firstSlide.classList.remove('lift');
          firstSlide.parentNode.appendChild(firstSlide);
          updateZIndex();
        }, 600); // Matches the transition time
      } else if (direction === 'prev') {
        const lastSlide = slides[slides.length - 1];
        lastSlide.classList.add('lift');
        setTimeout(() => {
          lastSlide.classList.remove('lift');
          lastSlide.parentNode.prepend(lastSlide);
          updateZIndex();
        }, 600);
      }
    }

    function updateZIndex() {
      slides.forEach((slide, index) => {
        slide.style.zIndex = slides.length - index;
        slide.style.transform = `translateZ(${index * 15}px) scale(${1 - index * 0.1})`;
      });
    }

    nextButton.addEventListener('click', () => updateSlides('next'));
    prevButton.addEventListener('click', () => updateSlides('prev'));

    updateZIndex(); // Initialize stacking
  });
</script>

