{% schema %}
{
  "name": "Enhanced Animated Slider",
  "settings": [
    {
      "type": "text",
      "id": "slider_title",
      "label": "Slider Title",
      "default": "Enhanced Animated Slider"
    },
    {
      "type": "checkbox",
      "id": "auto_play",
      "label": "Enable Auto-Play",
      "default": true
    },
    {
      "type": "number",
      "id": "auto_play_interval",
      "label": "Auto-Play Interval (ms)",
      "default": 5000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Slide Title",
          "default": "Default Slide Title"
        },
        {
          "type": "text",
          "id": "slide_subtitle",
          "label": "Slide Subtitle",
          "default": "Default Slide Subtitle"
        },
        {
          "type": "url",
          "id": "slide_button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "slide_button_text",
          "label": "Button Text",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Enhanced Slider",
      "category": "Sliders",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "slide_title": "First Slide",
            "slide_subtitle": "Subtitle for the first slide",
            "slide_button_text": "Discover",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image1.jpg"
          }
        },
        {
          "type": "slide",
          "settings": {
            "slide_title": "Second Slide",
            "slide_subtitle": "Subtitle for the second slide",
            "slide_button_text": "Learn More",
            "slide_button_link": "#",
            "slide_image": "shopify://shop_images/example_image2.jpg"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="animated-slider">
  <h2>{{ section.settings.slider_title }}</h2>
  <div class="slider-container">
    <div class="slides">
      {% for block in section.blocks %}
        <div class="slide">
          <div class="slide-image">
            {% if block.settings.slide_image %}
              <img src="{{ block.settings.slide_image | image_url }}" alt="Slide Image">
            {% endif %}
          </div>
          <div class="slide-text">
            <h3>{{ block.settings.slide_title }}</h3>
            <p>{{ block.settings.slide_subtitle }}</p>
            {% if block.settings.slide_button_link %}
              <a href="{{ block.settings.slide_button_link }}" class="slide-button">
                {{ block.settings.slide_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="slider-indicators">
      {% for block in section.blocks %}
        <span class="indicator" data-index="{{ forloop.index0 }}"></span>
      {% endfor %}
    </div>
    <button class="slider-button prev">Prev</button>
    <button class="slider-button next">Next</button>
  </div>
</div>

<style>
  .animated-slider {
    text-align: center;
    margin: auto;
    max-width: 800px;
    position: relative;
  }

  .slider-container {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .slides {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .slide {
    flex: 0 0 100%;
    display: none;
  }

  .slide.active {
    display: block;
  }

  .slide-image img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .slider-indicators {
    display: flex;
    justify-content: center;
    margin-top: 10px;
  }

  .indicator {
    width: 10px;
    height: 10px;
    margin: 0 5px;
    background: #ccc;
    border-radius: 50%;
    cursor: pointer;
    transition: background 0.3s;
  }

  .indicator.active {
    background: #007bff;
  }

  .slider-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    z-index: 10;
  }

  .slider-button.prev {
    left: 10px;
  }

  .slider-button.next {
    right: 10px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slides = document.querySelectorAll('.slide');
    const indicators = document.querySelectorAll('.indicator');
    const prevButton = document.querySelector('.slider-button.prev');
    const nextButton = document.querySelector('.slider-button.next');
    const autoPlay = {{ section.settings.auto_play }};
    const autoPlayInterval = {{ section.settings.auto_play_interval }};
    let currentSlideIndex = 0;
    let autoPlayTimer;

    function updateSlides() {
      slides.forEach((slide, index) => {
        slide.classList.toggle('active', index === currentSlideIndex);
      });

      indicators.forEach((indicator, index) => {
        indicator.classList.toggle('active', index === currentSlideIndex);
      });
    }

    function nextSlide() {
      currentSlideIndex = (currentSlideIndex + 1) % slides.length;
      updateSlides();
    }

    function prevSlide() {
      currentSlideIndex =
        (currentSlideIndex - 1 + slides.length) % slides.length;
      updateSlides();
    }

    function startAutoPlay() {
      if (autoPlay) {
        autoPlayTimer = setInterval(nextSlide, autoPlayInterval);
      }
    }

    function stopAutoPlay() {
      clearInterval(autoPlayTimer);
    }

    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        currentSlideIndex = index;
        updateSlides();
      });
    });

    nextButton.addEventListener('click', nextSlide);
    prevButton.addEventListener('click', prevSlide);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowRight') nextSlide();
      if (e.key === 'ArrowLeft') prevSlide();
    });

    const sliderContainer = document.querySelector('.slider-container');
    sliderContainer.addEventListener('mouseover', stopAutoPlay);
    sliderContainer.addEventListener('mouseout', startAutoPlay);

    updateSlides();
    startAutoPlay();
  });
</script>
