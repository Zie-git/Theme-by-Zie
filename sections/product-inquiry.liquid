<div class="contact-us-container">
  <div class="contact-us-section">

    <div class="contact-form1">
      <h1 class="title-contacts">Send us a message</h1>
      <div id="contact-message"></div> <!-- Notification message div -->
      {%- form 'contact', class: form_class -%}

          {%- if form.posted_successfully? -%}
    <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
      {% render 'icon-success' %}
      Message Sent. We will be in touch with you soon.
       {% comment %}  
      {{ 'templates.contact.form.post_success' | t }}
      {% endcomment %} 
    </h2>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        // Hide the form since success message is displayed
        document.getElementById('conts').style.display = 'none';
        document.getElementById('ContactFooter-success').style.display = 'none';
      });
    </script>
  {%- elsif form.errors -%}
    <div class="form__message">
      <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
        {% render 'icon-error' %}
        {{ 'templates.contact.form.error_heading' | t }}
      </h2>
    </div>
    <ul class="form-status-list caption-large" role="list">
      <li>
        <a href="#ContactForm-email" class="link">
          {{ form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email }}
        </a>
      </li>
    </ul>
  {%- endif -%}
        
        <div class="form-row">

          
          <div class="field">
            <input type="email" id="contact_email" name="contact[email]" placeholder="Email" required>
          </div>

          <div class="field">
            <input type="text" id="contact_name" name="contact[name]" placeholder="Name" required>
          </div>
          
        </div>
        
        <div class="form-row">
          <div class="field">
            <input type="text" id="contact_address" name="contact[address]" placeholder="Subject" required>
          </div>

        </div>
        
        <div class="field">
          <textarea id="contact_message" name="contact[body]" rows="5" placeholder="Message" required></textarea>
        </div>
        <button class="btns" type="submit">Send Message</button>
            <div id="contact-success-message" class="success-message"></div> <!-- Success message area -->
      {%- endform -%}
    </div>

    
  </div>
</div>

