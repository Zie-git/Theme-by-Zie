<script>
  document.addEventListener("DOMContentLoaded", function() {
    const form = document.querySelector('.contact-form1 form');

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      
      // Simulate form submission
      setTimeout(function() {
        form.reset();  // Clear the form fields after submission

        // Display the success message
        const successMessage = document.getElementById('contact-success-message');
        successMessage.innerHTML = '<i class="fas fa-check-circle"></i>Message Sent, Thank you for contacting us!';
        successMessage.style.display = 'flex';  // Show the success message
      }, 1000); // Simulate a delay in form processing
    });
  });
</script>


