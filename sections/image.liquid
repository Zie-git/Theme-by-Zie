<div class="image-with-text">
    {% if image_url %}
        <img src="{{ image_url }}" alt="{{ image_alt | default: 'Image Alt Text' }}" class="image">
    {% else %}
        <!-- Placeholder image URL -->
        <img src="https://via.placeholder.com/300x200?text=Placeholder+Image" alt="Placeholder Image" class="image">
    {% endif %}
    <div class="text-container">
        <h2>{{ heading | default: 'Heading Text' }}</h2>
        <p>{{ description | default: 'Description of the image and text' }}</p>
    </div>
</div>

{% schema %}
{
    "name": "Image",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "presets": [
        {
            "name": "Image"
        }
    ]
}
{% endschema %}