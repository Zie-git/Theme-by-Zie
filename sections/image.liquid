<div class="image-with-text">
    {% if image_url %}
        <img src="{{ image_url }}" alt="{{ image_alt | default: 'Image Alt Text' }}" class="image">
    {% else %}
        <!-- Placeholder image URL -->
        {{ 'lifestyle-1' | placeholder_svg_tag }}
    {% endif %}
    
    <div class="text-container">
        <h2>{{ section.settings.title | escape }}</h2>
        <p>{{ section.settings.description | escape }}</p>
    </div>
</div>

{% schema %}
{
    "name": "Image",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Heading Text"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Description of the image and text"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Padding Top (px)",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 20
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Padding Bottom (px)",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 20
        }
    ],
    "presets": [
        {
            "name": "Image"
        }
    ]
}
{% endschema %}